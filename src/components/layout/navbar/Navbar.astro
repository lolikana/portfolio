---
import { navbarLinksData } from '@libs/data';

import NavbarContainer from './NavbarContainer.astro';
import NavbarLinks from './NavbarLink.astro';

type Props = {
	class: string;
};

const { class: primary_navbar, ...rest } = Astro.props;
---

<NavbarContainer class={primary_navbar} {...rest}>
	<ul slot="navbar" class="primary-navbar__list_items">
		{
			navbarLinksData.map((link, index) => (
				<NavbarLinks
					link={link}
					index={index}
					class="primary-navbar__list_item"
					class2="item_link"
				/>
			))
		}
		<NavbarLinks
			link={{ href: 'contact' }}
			index={0}
			class="primary-navbar__list_item"
			class2="item_link"
		/>
	</ul>
</NavbarContainer>

<style lang="scss">
	.primary-navbar__list_items {
		display: flex;
	}
</style>

---
type Props = {
	class: 'type1';
};

const { class: shape, ...rest } = Astro.props;
---

<div class="div-container" {...rest}>
	<div class:list={['div-container__shape-shadow', shape]}>
		<div class:list={['div-container__shape', shape]}></div>
	</div>
	<slot />
</div>

<style lang="scss">
	.div-container {
		position: relative;
		margin: 1rem auto;
	}

	.div-container__shape::before {
		content: '';
		position: absolute;
		width: 100%;
		height: 100%;
		background-size: 100% 100%;
		z-index: -1;
	}

	.div-container__shape-shadow::before {
		content: '';
		position: absolute;
		width: 100%;
		height: 100%;
		background-size: 100% 100%;
		z-index: -1;
		filter: $filter-tertiary;
		opacity: 0.5;
		transform: translateY(15px) translateX(20px);
	}

	.div-container__shape-shadow,
	.div-container__shape {
		&.type1 {
			&::before {
				background-image: url('@assets/shape/type1.svg');
			}
		}
	}
</style>

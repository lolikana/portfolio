---
type Props = {
	class: 'type1' | 'type2' | 'type3';
};

const { class: shape, ...rest } = Astro.props;
---

<div class:list={['div-container', shape]} {...rest}>
	<slot />
</div>

<style lang="scss">
	.div-container {
		position: relative;
		background-color: $primary-color;

		&.type1,
		&.type3 {
			max-width: 760px;
			margin: 1rem auto 2rem auto;
			padding: 3rem 2rem 2rem;
		}

		&.type1::before,
		&.type2::before,
		&.type3::before {
			content: '';
			position: absolute;
			width: 100%;
			height: 100%;
			height: 2rem;
			left: 0;
			top: -2rem;
		}

		&.type1::before {
			background: url('@assets/shape/type1.svg') no-repeat;
		}

		&.type2 {
			margin-inline: calc(-1 * $main-inlinePadding-mobile * 1.1);
			@include mq('md') {
				margin-inline: calc(-1 * $main-inlinePadding-desktop * 1.43);
			}
		}

		&.type2::before,
		&.type3::before {
			background-size: 100%;
			background-position: bottom;
			@include mq('md') {
				background-position: center;
			}
		}
		&.type2::before {
			background: url('@assets/shape/type2.svg') no-repeat;
		}
		&.type3::before {
			background: url('@assets/shape/type3.svg') no-repeat;
		}
	}
</style>

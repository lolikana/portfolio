---
const { text, type } = Astro.props;
---

<button class='btn' type={type}>
	{text}
</button>

<style lang='scss'>
	.btn,
	.btn::after {
		--width: 100%;
		--height: 2rem;
		--line-height: var(--height);
		--color: #e5e7eb;
		--color-1: #{$primary-color};
		--color-2: #{$secondary-color};
		--color-3: #{$tertiary-color};

		width: var(--width);
		height: var(--height);
		font-size: 1rem;
		padding-left: 1rem;
		background: linear-gradient(45deg, transparent 5%, var(--color-3) 5%);
		border: 0;
		color: var(--color);
		letter-spacing: 3px;
		line-height: var(--line-height);
		box-shadow: 6px 0px 0px var(--color-2);
		outline: transparent;
		position: relative;
		cursor: pointer;
	}
</style>

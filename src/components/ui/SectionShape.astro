---
import SectionTitle from './SectionTitle.astro';

type Props = {
	sectionNumber: number;
	sectionTitle: string;
	class: 'type1';
};

const { sectionNumber, sectionTitle } = Astro.props;
const { class: shape, ...rest } = Astro.props;
---

<section class="section-wrapper" {...rest}>
	<SectionTitle sectionNumber={sectionNumber} sectionTitle={sectionTitle} />
	<div class="section-container">
		<div class:list={['section-container__shape-shadow', shape]}>
			<div class:list={['section-container__shape', shape]}></div>
		</div>
		<slot name="section-text" />
	</div>
</section>

<style lang="scss">
	.section-wrapper {
		max-width: 760px;
		margin: 0 auto;
	}

	.section-container {
		position: relative;
		margin: 1rem auto;
	}

	.section-container__shape::before {
		content: '';
		position: absolute;
		width: 100%;
		height: 100%;
		background-size: 100% 100%;
		z-index: -1;
	}

	.section-container__shape-shadow::before {
		content: '';
		position: absolute;
		width: 100%;
		height: 100%;
		background-size: 100% 100%;
		z-index: -1;
		filter: $filter-tertiary;
		opacity: 0.5;
		transform: translateY(15px) translateX(20px);
	}

	.section-container__shape-shadow,
	.section-container__shape {
		&.type1 {
			&::before {
				background-image: url('@assets/shape/type1.svg');
			}
		}
	}
</style>

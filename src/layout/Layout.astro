---
import Header from '@components/layout/header/Header.astro';

type Props = {
	pageTitle: string;
};

const { pageTitle } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png+xml" href="/favicon-cyber.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
	</body>
</html>

<script>
	const favIcon = document.querySelector('link[rel="icon"]') as HTMLLinkElement;
	const colorTheme = window.matchMedia('(prefers-color-scheme: dark)');
	const isDarkTheme = colorTheme.matches;

	/** Change the favicon */
	document.addEventListener('visibilitychange', () => {
		if (document.hidden) {
			isDarkTheme
				? favIcon.setAttribute('href', '/favicon-dark.png')
				: favIcon.setAttribute('href', '/favicon-light.png');
			return;
		}
		favIcon.setAttribute('href', '/favicon-cyber.png');
		return;
	});

	colorTheme.addEventListener('change', event => {
		if (document.hidden) {
			if (event.matches) {
				favIcon.setAttribute('href', '/favicon-dark.png');
				return;
			}
			favIcon.setAttribute('href', '/favicon-light.png');
		}
		return;
	});

	/** Scroll listener */
	const header = document.querySelector('.header') as HTMLDivElement;
	const scrollY = window.scrollY;

	scrollY ? header.classList.add('scrolled') : null;

	window.addEventListener('scroll', () => {
		const scrollY = window.scrollY;
		if (scrollY >= 20) return;

		scrollY === 0 ? header.classList.remove('scrolled') : header.classList.add('scrolled');
	});
</script>
